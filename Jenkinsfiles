pipeline {
    agent any

    stages {
        stage('Conditional Execution') {
            when {
                anyOf {
                    branch 'master'
                    branch 'develop'
                }
            }
            stages {
                stage('Checkout') {
                    steps {
                        echo 'Checking out code...'
                        checkout scm
                    }
                }

                stage('Build') {
                    steps {
                        echo 'Building the application...'
                        script {
                            docker.build('cargo-solutions')
                        }
                    }
                }

                stage('Test') {
                    steps {
                        echo 'Running tests...'
                        script {
                            docker.image('cargo-solutions').inside {
                                sh 'docker-compose run --rm test'
                            }
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            script {
                sh 'docker-compose down -v'
            }
        }
    }
}
